}

.myCanvas{
  top: 0;
  left: 0;
  width: 100%;
  height: 80%;
  position: absolute;
}

slider {
  position: fixed;
  bottom: 42rpx;
  width: 80%;
  padding: 20rpx;
}

.bottom {
  position: fixed;
	width: 100%;
	bottom: 0;
	z-index: 1024;
