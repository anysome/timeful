.canvas_area {
  width: 100%;
  height: 100%;
  position: absolute;
  margin-top: 20rpx;
}

.myCanvas{
  top: 0;
  left: 0;
  width: 100%;
  height: 80%;
  position: absolute;
}

.bgImage{
  top: 0;
  left: 0;
  width: 100%;
  height: 80%;
  position: absolute;
}

.bottom {
  display: flex;
  justify-content: space-around;
}

.operation {
  width: 60rpx;
  height: 60rpx;
  margin: 20rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.btn-common {
  border-radius: 50%;
  background: white; 
  background-size: 50% 50%;
}

.bg-disabled {
  background-color: #ccc;
}

.panel {
  width: 100%;
  position: fixed;
  bottom: 42rpx;
}

.panel-box {
  width: 50%;
  margin: 40rpx auto;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.color-spot {
  height: 50rpx;
  width: 50rpx;
  border-radius: 50%;
  border-style: solid;
  border-width: 0px;
  background-repeat: no-repeat;
  background-position: center;
  background-size: 100% 100%;
}

.color-bar {
  width: 50%;
  margin: 40rpx auto;
}

.btn-width {
  height: 50rpx;
  width: 50rpx;
  border-radius: 50%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center
}