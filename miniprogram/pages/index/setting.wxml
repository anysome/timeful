<cu-custom bgColor="bg-gradual-blue">
  <view slot="content">设置</view>
</cu-custom>

<scroll-view scroll-y class="scroll-page">

  <view class='margin-left-xl padding-top-xl text-sm text-gray text-shadow'>FEEDBACK</view>
  <view class="cu-list menu card-menu margin-top-sm margin-bottom-xl shadow-lg radius">
    <view class="cu-item arrow" bindtap="showQrcode">
      <view class="content">
        <text class="cuIcon-appreciatefill text-yellow"></text>
        <text class="text-grey">赞赏支持</text>
      </view>
    </view>
    <view class="cu-item arrow">
      <button class="cu-btn content" open-type="feedback">
        <text class="cuIcon-writefill text-blue"></text>
        <text class="text-grey">意见反馈</text>
      </button>
    </view>
    <view class="cu-item arrow" bindtap="authSetting">
      <view class="content">
        <text class="cuIcon-settings text-pink"></text>
        <text class="text-grey">授权设置</text>
      </view>
    </view>
  </view>

  <view class='margin-left-xl padding-top-xl text-sm text-gray text-shadow'>MINIAPPS</view>
  <view class="cu-list menu card-menu margin-top-sm margin-bottom-xl shadow-lg radius">
    <view class="cu-item arrow">
      <view class="content" bindtap="openApp" data-appid='wx25f51a6ee6fef14d'>
        <text class="cuIcon-apps text-orange"></text>
        <text class="text-grey">发呆 - 为了更好的专注</text>
      </view>
    </view>
  </view>

  <view class='margin-left-xl padding-top-xl text-sm text-gray text-shadow'>THANKS</view>
  <view class="cu-list menu card-menu margin-top-sm margin-bottom-xl shadow-lg radius">
    <view class="cu-item">
      <view class="content" bindtap="copyLink" data-link="https://github.com/weilanwl/ColorUI">
        <text class="cuIcon-github text-grey"></text>
        <text class="text-grey">ColorUI组件库</text>
      </view>
      <text class="cuIcon-like text-yellow"></text>
    </view>
    <view class="cu-item">
      <view class="content" bindtap="copyLink" data-link="https://github.com/b5156/mobx-wxapp">
        <text class="cuIcon-github text-grey"></text>
        <text class="text-grey">mobx-wxapp</text>
      </view>
      <text class="cuIcon-like text-yellow"></text>
    </view>
  </view>

  <view class="cu-tabbar-height"></view>
  
</scroll-view>